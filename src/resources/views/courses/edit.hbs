<h1>Edit Course</h1>
<form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="mb-3">
        <label for="title" class="form-label">Course Name:</label>
        <input type="text" class="form-control" id="title" name="title"
            value="{{course.title}}">
    </div>
    <div class="mb-3">
        <label for="author" class="form-label">Author</label>
        <input type="text" class="form-control" id="author" name="author"
            value="{{course.author}}">
    </div>
    <div class="mb-3">
        <label for="desc" class="form-label">Desciption</label>
        <input type="text" class="form-control" id="desc" name="desc"
            value="{{course.desc}}">
    </div>
    <div class="mb-3">
        <label for="videoId" class="form-label">Video ID</label>
        <input type="text" class="form-control" id="videoId" name="videoId"
            value="{{course.videoId}}">
    </div>
    <button type="submit" class="btn btn-primary">Edit Confirm</button>
</form>
